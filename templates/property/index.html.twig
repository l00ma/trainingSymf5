{% extends 'base.html.twig' %}
{% block title 'Tous nos biens' %}

{% block body%}
	<div class="bg-light p-5 rounded-lg m-3">
		<div class="container">
			{{form_start(form)}}
			<div class="row align-items-end">
				<div class="col">
					{{ form_row(form.minSurface)}}
				</div>
				<div class="col">
					{{ form_row(form.maxPrice)}}
				</div>
				<div class="col">
					<div class="form-group">
						<button class="btn btn-primary">Rechercher</button>
					</div>
				</div>
				<div class="col text-primary" style="font-size: 2rem; font-weight: bold;">
					{% if properties.getTotalItemCount == 0 %}
						Aucun résultat
					{% elseif properties.getTotalItemCount == 1 %}
						{{properties.getTotalItemCount}}
						résultat
					{% else %}
						{{properties.getTotalItemCount}}
						résultats
					{% endif %}
				</div>
			</div>
			{{form_end(form)}}
		</div>
	</div>
	<div class="container mt-4">
		<h1>Voir tous nos biens</h1>
		<div class="row">
			{% for property in properties %}
				<div class="col-md-3">
					{% include 'property/_property.html.twig' %}
				</div>
			{% endfor %}
		</div>
		<div class="pagination">
			{{ knp_pagination_render(properties) }}
		</div>
	</div>
{% endblock %}
