{% extends 'base.html.twig' %}
{% block title "Bienvenue sur l\'agence" %}

{% block body%}
	<div class="jubotron text-center">
		<h1>Agence immobiliere BIENSAVENDRE</h1>
		<p>Elle recense tous les biens que vous cherchez.</p>
	</div>

	<div class="container">
		<h2>
			Nos offres les plus récentes:</h2>
		<div class="row flex">
			{% for property in properties %}
				<div class="col-3">
					<div class="card">
						<a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}" style="text-decoration:none">
							<div class="card-body">
								<h5 class="card-title">
									{% if property.filename %}
										<img src="{{ vich_uploader_asset(property, 'imageFile') | imagine_filter('thumb') }}" class="card-img-top" style="width: 100%; height: auto">
									{% else %}
										<img src="{{ '/images/properties/empty.jpg' | imagine_filter('thumb') }}" class="card-img-top" style="width: 100%; height: auto">
									{% endif %}
									{{ property.title }}
								</h5>
								<p class="card-text">{{ property.city }}
									({{ property.postalCode }})</p>
								<div class="text-primary" style="font-weight: bold; font-size: 2rem;">{{ property.formattedPrice }}
									€</div>
							</div>
						</a>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
